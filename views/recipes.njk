{% extends "layout.njk" %}

{% block head %}

    <title>Foodfy - Receitas</title>

{% endblock %}

{% block content %}

    <main class="wrapper">

        <div class="images">
            {% for item in items %}
                <div class="image" id="{{item.id}}">
                    <img src="{{item.image_path}}" alt="Imagem de {{item.title}}">
                    <h5>{{item.title}}</h5>
                    <p>{{item.author}}</p>
                </div>
            {% endfor %}
        </div>

    </main>
    
    <script src="/script.js"></script>

{% endblock %}