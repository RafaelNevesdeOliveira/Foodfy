{% extends "layout.njk" %}

{% block head %}

    <title>Foodfy - Receitas</title>

{% endblock %}

{% block content %}

    <main class="wrapper">

        <div class="images">
            {% for item in items %}
                <div class="image" id="{{item.id}}">
                    <img src="{{item.image_path}}" alt="Imagem de {{item.title}}">
                    <h5>{{item.title}}</h5>
                    <p>{{item.author}}</p>
                </div>
            {% endfor %}
        </div>

    </main>

    <div class="modal-overlay">
        <div class="modal">
            <div class="modal-content">
                <img src="" alt="">
            </div>
            <div class="modal-info">
                <h5></h5>
                <p></p>
                <button class="close-modal">Fechar modal</button>
            </div>
        </div>
    </div>

    <script src="/script.js"></script>

{% endblock %}